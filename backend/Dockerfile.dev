# Development Dockerfile für Backend mit Hot Reload
FROM python:3.12-slim

WORKDIR /app

# System-Dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Python-Dependencies installieren
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Port 8000 exponieren
EXPOSE 8000

# Uvicorn mit --reload für Hot Reload
# --host 0.0.0.0 erlaubt Zugriff von außerhalb des Containers
# --reload überwacht Dateiänderungen und startet automatisch neu
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
